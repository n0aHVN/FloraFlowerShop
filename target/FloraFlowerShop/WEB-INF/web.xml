    <!-- servlet mappings -->
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/hihi</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    	<servlet-name>LoginPage</servlet-name>
    	<url-pattern>/loginpage</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>EmailListServlet</servlet-name>
        <url-pattern>/homework/5/emailList</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ServletSurvey</servlet-name>
        <url-pattern>/homework/6/survey</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/homework/7/1/download</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/homework/7/2/cart</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>EmailListServlet1</servlet-name>
        <url-pattern>/homework/8/emailList</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DownloadServlet1</servlet-name>
        <url-pattern>/homework/9/1/download</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CartServlet1</servlet-name>
        <url-pattern>/homework/9/2/cart</url-pattern>
    </servlet-mapping>
