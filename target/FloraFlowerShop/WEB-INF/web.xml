   <!-- servlet definitions -->
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>murach.Controllers.Home</servlet-class>
    </servlet>
    
    <servlet>
    	<servlet-name>LoginPage</servlet-name>
    	<servlet-class>murach.Controllers.LoginController</servlet-class>
    </servlet>
    
    <!-- 5 Servlet -->
    <servlet>
        <servlet-name>EmailListServlet</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework5_Servlet</servlet-class>
    </servlet>
    
    <!-- 6 JSTL -->
    <servlet>
        <servlet-name>ServletSurvey</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework6_EL_JSTL</servlet-class>
    </servlet>
    
    <!-- 7_1 Cookie -->
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework7_Cookie</servlet-class>
    </servlet>
    <!-- 7_2 Hidden fields -->
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework7_HiddenFields</servlet-class>
    </servlet>
    
    <!-- 8 EL -->
    <servlet>
        <servlet-name>EmailListServlet1</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework8_EL</servlet-class>
    </servlet>
    
    <!-- 9_1 JSTL -->
    <servlet>
        <servlet-name>DownloadServlet1</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework9_1_JSTL</servlet-class>
    </servlet>
    
    <!-- 9_2 JSTL -->
    <servlet>
        <servlet-name>CartServlet1</servlet-name>
        <servlet-class>murach.Controllers.Homework.Homework9_2_JSTL_CartServlet</servlet-class>
    </servlet>
