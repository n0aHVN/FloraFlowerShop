   <!-- servlet definitions -->
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>murach.Controllers.Home</servlet-class>
    </servlet>


    <!-- servlet mappings -->
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/hihi</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
